<Window x:Class="MVVMPractice.ComboBoxBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMPractice"
        mc:Ignorable="d"
        Title="ComboBox 예제" Height="200" Width="300">
    <StackPanel Margin="10">
        <ComboBox ItemsSource="{Binding Users}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedUser}" Height="25"/>
        <TextBlock Text="{Binding SelectedUserName}" Margin="0,10"/>
    </StackPanel>
</Window>
